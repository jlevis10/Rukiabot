# importing libraries
import tweepy
import time
import random
from haiku import Haiku

# defining keys
API_key = 'yqQbu4r2BAeIlS2iQLMmnMEKd'
API_key_secret = 'dN23yCaP62vwQkF1P6eXwOrsrIuiOUnh4Bkc7ensbhTwLWudrh'
access_token = '1510381174849482758-NEcK4AJO5YmesOCIzjseVXVfqKkGSy'
access_token_secret = 'kbxUHs3psXff1qcAGBTLrpfzAQ7BVRWzMEbcsa0kocFjr'

# authenticating
auth = tweepy.OAuthHandler(API_key, API_key_secret)
auth.set_access_token(access_token, access_token_secret)
api = tweepy.API(auth)

try:
    api.verify_credentials()
    print("Authentication OK")
except:
    print("Error during authentication")


# defining function
def tweet(tweet_text):
    api.update_status(tweet_text)
    print('Tweeted: ' + tweet_text)



if __name__ == '__main__':
    h = Haiku()
    # defining loop to tweet
    tweet(h.generate())


exit()






